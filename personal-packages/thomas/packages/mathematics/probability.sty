\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{packages/mathematics/probability}

% Probability, optional parameter is subscript for P
\renewcommand{\P}[2][]{\mathbb{P}_{#1}\paren*{#2}}

% Expected value
\newcommand{\E}[1]{\mathbb{E}\brackets*{#1}}

% Indicator function, less spacing after the 1
\newcommand{\1}[1]{\mathds{1}\mathopen{}\mathclose\bgroup\left\{#1\aftergroup\egroup\right\}}

% Distributions
\DeclareMathOperator{\Exp}{Exp} % exponential
\DeclareMathOperator{\Geo}{Geo} % geometric
\DeclareMathOperator{\Poi}{Poi} % poisson
\DeclareMathOperator{\Unif}{Unif} % uniform
\DeclareMathOperator{\Erlang}{Erlang} % erlang
\DeclareMathOperator{\Ber}{Ber} % bernouilli
\DeclareMathOperator{\Bin}{Bin} % binomial
\newcommand{\Norm}{\mathcal N} % normal

% Variance
\DeclareMathOperator{\Var}{Var}

% Mean squared error
\DeclareMathOperator{\MSE}{MSE}

% Maximum Likelihood Estimator
\DeclareMathOperator{\MLE}{MLE}
